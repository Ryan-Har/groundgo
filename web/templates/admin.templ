        white-space: nowrap;
      }
      .table-container {
        background: white;
        border-radius: 6px;
        box-shadow: 0 0.5em 1em -0.125em rgba(10, 10, 10, 0.1);
      }
      .page-header {
        border-bottom: 1px solid #dbdbdb;
        padding: 1.5rem 0;
        margin-bottom: 2rem;
      }

	  .stats-card {
		border-radius: 6px;
		box-shadow: 0 0.5em 1em -0.125em rgba(10, 10, 10, 0.1);
